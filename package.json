{
  "name": "peak-app",
  "productName": "Peak",
  "author": {
    "name": "Devon",
    "email": "devonperoutky@gmail.com"
  },
  "description": "Your Peakiest Peak",
  "repository": {
    "type": "git",
    "url": "https://github.com/DevonPeroutky/peak-app.git"
  },
  "homepage": ".",
  "main": "build/electron/main.js",
  "version": "0.0.2-beta",
  "scripts": {
    "extension:dev": "REACT_APP_ENV=dev webpack --config build-config/webpack/webpack.chrome-extension.config.js --mode=development --watch",
    "extension:build": "webpack --config build-config/webpack/webpack.chrome-extension.config.js --mode=production",
    "start": "PORT=3001 REACT_APP_DIST=webapp REACT_APP_ENV=dev react-scripts start",
    "build": "REACT_APP_DIST=webapp REACT_APP_ENV=prod react-scripts build",
    "electron:dev": "concurrently \"BROWSER=none REACT_APP_DIST=electron REACT_APP_ENV=dev react-scripts start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "dev": "concurrently \"yarn start\" \"yarn electron:dev\"",
    "electron:build": "REACT_APP_BACKEND_SERVER_ADDRESS=peak-backend.onrender.com REACT_APP_APP_SERVER_ADDRESS=peak-app-server.onrender.com REACT_APP_DIST=electron REACT_APP_ENV=prod react-scripts build && tsc -p electron && electron-builder",
    "electron:publish": "REACT_APP_BACKEND_SERVER_ADDRESS=peak-backend.onrender.com REACT_APP_APP_SERVER_ADDRESS=peak-app-server.onrender.com REACT_APP_DIST=electron REACT_APP_ENV=prod react-scripts build && tsc -p electron && electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "appId": "com.Massive.Peak",
    "dmg": {
      "sign": false
    },
    "publish": [
      "github"
    ],
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "category": "public.app-category.productivity",
      "icon": "build/assets/icon.icns"
    },
    "afterSign": "scripts/notarize.js"
  },
  "keywords": [],
  "license": "MIT",
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-unused-vars": "off",
      "noImplicitReturns": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "babel-loader": "8.1.0",
    "concurrently": "^5.3.0",
    "cpy": "^8.1.1",
    "css-loader": "^4.3.0",
    "electron": "10.1.3",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "electron-webpack-ts": "^4.0.1",
    "eslint-plugin-import": "^2.20.0",
    "file-loader": "^6.1.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "node-loader": "^1.0.1",
    "node-sass": "^4.14.1",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.3.0",
    "ts-loader": "^8.0.4",
    "ttf-loader": "^1.0.2",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "@ant-design/icons": "^4.2.1",
    "@crello/react-lottie": "^0.0.7",
    "@iconify/icons-gridicons": "^1.0.6",
    "@iconify/react": "^1.1.3",
    "@n8tb1t/use-scroll-position": "^1.0.43",
    "@reduxjs/toolkit": "^1.2.5",
    "@types/chrome": "^0.0.127",
    "@types/classnames": "^2.2.10",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/immutability-helper": "^2.6.3",
    "@types/is-url": "^1.2.28",
    "@types/lodash": "^4.14.150",
    "@types/node": "^12.0.0",
    "@types/phoenix": "^1.5.1",
    "@types/ramda": "^0.26.41",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux-logger": "^3.0.7",
    "@types/slate": "^0.47.5",
    "@types/slate-react": "^0.22.9",
    "@types/styled-components": "^5.1.0",
    "@types/uuid": "^7.0.3",
    "@udecode/slate-plugins": "^0.68.0",
    "ace-builds": "^1.4.11",
    "animate.css": "^4.1.1",
    "antd": "^4.4.1",
    "axios": "^0.19.2",
    "axios-hooks": "^1.9.0",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^6.2.1",
    "electron-deeplink": "^1.0.4",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.4",
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.3.5",
    "electron-webpack": "^2.8.2",
    "eslint": "^6.6.0",
    "immutability-helper": "^3.1.1",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "phoenix": "^1.5.7",
    "ramda": "^0.27.0",
    "react": "^17.0.1",
    "react-ace": "^8.1.0",
    "react-bottom-scroll-listener": "^4.1.0",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dom": "^17.0.1",
    "react-google-login": "^5.1.1",
