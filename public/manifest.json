{
    "name": "Peak",
    "key": "eiilkgojneaombphoehpmiclaknkfpdb",
    "author": "Devon Peroutky",
    "version": "0.0.1",
    "description": "Hello, Darkness my old friend.",
    "icons": {
        "16": "assets/halo-16.png",
        "48": "assets/halo-48.png",
        "128": "assets/halo-128.png"
    },
    "permissions": ["storage", "contextMenus", "activeTab", "tabs", "http://localhost/*", "identity"],
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Open the popup"
    },
    "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk='; object-src 'self'",
    "content_scripts" : [
        {
            "matches": [ "<all_urls>" ],
            "css": ["/static/css/app.css", "/static/css/content.css"],
            "js": ["/static/js/content.js"]
        }
    ],
    "background": {
        "scripts": ["/static/js/background.js"]
    },
    "oauth2": {
        "client_id": "261914177641-3jo4ronmd775i0fl4sbav4ojuq0t4oa0.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/userinfo.email"
        ]
    },
    "commands": {
        "add-to-reading-list": {
            "suggested_key": {
                "default": "Ctrl+Shift+A",
                "mac": "Command+Shift+A"
            },
            "description": "Add current page to Reading List"
        },
        "save-page": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Save current page to personal wiki"
        },
        "pop-from-reading-list": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Read next item"
        },
        "add-journal-entry": {
            "suggested_key": {
                "default": "Ctrl+Shift+7",
                "mac": "Command+Shift+7"
            },
            "description": "Read",
            "global": true
        }
    }
}